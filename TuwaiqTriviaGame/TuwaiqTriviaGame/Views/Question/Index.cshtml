
@{
    var questions = (List<Question>)ViewData["questions"];
    var categories = (List<Category>)ViewData["categories"];
}
<div class="container">
    <div class="row">
        <div class="col-sm">
            @foreach (Category category in categories)
            {
                <h4>@category.Name</h4>
                <br />
                <br />
                <br />
            }
        </div>
        <div class="col-sm">
            @foreach (Question q in questions)
            {
               
                <div class="card" style="width: 35rem;">
                    <div class="card-body">
                        <h5  class="@q.Id">@q.question</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@q.category.Name</h6>
                        @*<p class="card-text">@q.question</p>*@
                    <a href="Question/ShowAnswer/@q.Id" class="card-link">Show Answer</a>
                        
                    </div>
                </div>
            }


        </div>

    </div>
    
</div>